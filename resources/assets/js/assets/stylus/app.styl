@require '~element-ui/lib/theme-default/index.css'

@import './base'
@import './helpers'

.login-wrapper{
  background:url('./../images/backgr.jpg') no-repeat;
  background-size:cover;
  height:100%;
  min-height:100vh;
  padding-bottom:20px;
}

.home-wrapper{
  background-size:cover;
  height:100%;
  min-height:100vh;
  padding-bottom:20px;
}

.login
  display: block
  text-align: center

a.buttons_login button{
  font-size: 1.5rem;
  font-weight: 200;
  background:#86c543;
  color:#FFF;
  border:0px;
  font-family: 'Roboto', sans-serif;
  padding:15px 40px;

  display:inline-block;

}
a.buttons_login:hover button{
  background:#2a2a2a;
  color:#FFF;
}

.loginBox,.registerBox{
  background:#FFF;
  border-radius:5px;
  padding:30px;
  input[type="text"],
  input[type="email"],
  input[type="password"]{
    height:50px;
    border:1px solid #ccc;
    display:block;
    width:100%;
    &:hover{
      border-color:#86c543;
    }
  }
  input[type="submit"]{
    background:#86c543;
    color:#FFF;
    height:50px;
    cursor:pointer;
    font-size:16px;
    margin:10px auto;
    text-align:center;
    float:center;
    &:hover{
      background:#2a2a2a;
    }
  }
  h3{
    font-family: 'Roboto', sans-serif;
    font-weight:normal;
    font-weight:100;
    font-size: 1.5rem;
  }
}
.forgot-password{
  font-size:12px;
  text-align:right;
  display:block;
  color:#a2a2a2;
  a{
    color:#a2a2a2;
    text-decoration:none;
    &:hover{
      color:#2a2a2a;
    }
  }
}



  .user-details {
      .logo {
        margin-left: 56px;
        img{
            width: 180px;
        }
      }
      .userType{
        float:left;
        margin-top:10px;
  	  }
  }

.listsClients{
	padding-left: 6px;
	padding-right: 6px;
	margin-bottom: 6.8px;
}

.listsClients .el-card{
	height: 140px;
	width: 100%;
	-webkit-transition-property: all; /* Safari */
	-webkit-transition-duration: transition-time; /* Safari */
	transition-property: all;
	transition-duration: transition-time;
}

.top-menu button{
  margin-right: 50px;
}
.el-menu{
  opacity 0.5;
  &:hover{
    opacity:1;
  }
}
.mobileMenu{
  display none;
  margin-left: calc((100% + 100px) / 2)  !important;
}
@media only screen and (max-width:992px){
  .el-row{
    width:100%;
  }
  .user-details .logo {
    margin-left: calc((100% - 208px) / 2) !important;
    position: relative;
    bottom: 19px;
  }
  .top-menu{
    display: none;
  }
  .mobileMenu{
    display:inline-block;
  }
  .main-content{
    margin-right:0px;
  }
  footer{
    padding-left:0px;
  }
  .innermenuIcon{
    display:block;
  }
  .innermenuText{
    display:none;
  }
}

@media (max-width:600px) {
  .mobileMenu{
   bottom 45px;
  }
}